{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.mjs", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
